<odoo>
  <data>

    <record id="approval_module_view_tree" model="ir.ui.view">
      <field name="name">approval.module.view.tree</field>
      <field name="model">approval.module</field>
      <field name="arch" type="xml">
        <tree create="0" delete="0" duplicate="0" edit="0">
          <field name="name" />
          <field name="technical_name" />
        </tree>
      </field>
    </record>

    <record id="approval_module_view_form" model="ir.ui.view">
      <field name="name">approval.module.view.form</field>
      <field name="model">approval.module</field>
      <field name="arch" type="xml">
        <form create="0" delete="0" duplicate="0" edit="0">
          <sheet>
            <group>
              <field name="name" />
              <field name="technical_name" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_approval_module" model="ir.actions.act_window">
      <field name="name">Approval Module</field>
      <field name="res_model">approval.module</field>
      <field name="view_mode">tree,kanban,form</field>
    </record>

    <!-- menu categories -->
    <menuitem
      name="Approval Module"
      id="misl_approval.menu_approval_module"
      parent="misl_approval.menu_root"
      action="action_approval_module"
      sequence="30"
    />


  </data>
</odoo>
