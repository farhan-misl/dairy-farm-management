                            </td>
<!--                            <td class="text-right" style="border-width: 1px; border-color: black;">-->
<!--                                <span style="font-size: 12px;" t-field="l.budget_qty" />-->
<!--                            </td>-->
<!--                            <td class="text-right" style="border-width: 1px; border-color: black;">-->
<!--                                <span style="font-size: 12px;" t-field="l.periodic_budget_qty" />-->
<!--                            </td>-->
<!--                            <td class="text-right" style="border-width: 1px; border-color: black;">-->
<!--                                <span style="font-size: 12px;" t-field="l.rem_budget_qty" />-->
<!--                            </td>-->
                            <td class="text-right" style="border-width: 1px; border-color: black;">
                                <span style="font-size: 12px;" t-field="l.received_qty" />
                            </td>
                            <td class="text-right" style="border-width: 1px; border-color: black;">
                                <span style="font-size: 12px;" t-field="l.qty_in_hand"/>
                            </td>
                            <td class="text-left" style="border-width: 1px; border-color: black;">
                                <span style="font-size: 12px;" t-esc="o.date_required.strftime('%d/%m/%Y')" />
                            </td>

