<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.requisition</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="0"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside" >
                    <div class="app_settings_block" data-string="Requisition Settings" string="Requisition" data-key="misl_requisition" groups="base.group_erp_manager">
                        <h2>Requisition</h2>
                        <div class="row mt16 o_settings_container" name="operations_setting_container">

                            <div class="col-12 o_setting_box"
                                id="requisition_sale_order"
                                title="Create Requisition From Sales Order">
                                <div class="o_setting_left_pane">
                                    <field name="module_misl_requisition_sale_order"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="module_misl_requisition_sale_order"/>
                                    <div class="text-muted">
                                        Create Requisition From Sales Order
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 o_setting_box"
                                id="requisition_mo"
                                title="Use Requisition for Manufacturing Order">
                                <div class="o_setting_left_pane">
                                    <field name="module_misl_requisition_mo"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="module_misl_requisition_mo"/>
                                    <div class="text-muted">
                                        Use Requisition for Manufacturing Order
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 o_setting_box"
                                id="requisition_mo"
                                title="Use Requisition for Vendor Bill Register Payment">
                                <div class="o_setting_left_pane">
                                    <field name="module_misl_requisition_bill"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="module_misl_requisition_bill"/>
                                    <div class="text-muted">
                                        Use Requisition for Vendor Bill Register Payment
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="action_requisition_config_settings" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'misl_requisition', 'bin_size': False}</field>
        </record>
        <menuitem id="menu_requisition_general_settings" name="Settings" parent="misl_requisition.config_sidebar_menu"
            sequence="0" action="action_requisition_config_settings" groups="base.group_erp_manager"/>
    </data>
</odoo>
