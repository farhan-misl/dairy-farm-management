        <record model="ir.actions.act_window" id="action_requisition_master_list">
            <field name="name">Master Requisition</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">requisition.master</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="requisition_master_search"/>
            <field name="domain">[('requisition_type', '=', 'use')]</field>
            <field name="context">{
                "default_user_id": uid,
                }
            </field>
        </record>

        <record id="action_batch_requisition_approve" model="ir.actions.server">
            <field name="name">Approve</field>
            <field name="model_id" ref="misl_requisition.model_requisition_master"/>
            <field name="binding_model_id" ref="misl_requisition.model_requisition_master"/>
            <field name='groups_id' eval="[(4, ref('misl_requisition.misl_requisition_admin'))]"/>
            <field name="state">code</field>
            <field name="code">
                if records:
                action = records.batch_approve()
            </field>
        </record>

