<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="inherit_purchase_order_form_view" model="ir.ui.view">
        <field name="name">inherit.purchase.order.form.view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//notebook/page[1]/field[@name='order_line']/tree/field[@name='price_subtotal']"
                   position="after">
                <field name="custom_requisition_line_id" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='requisition_id']" position="attributes">
<!--                <field name="operating_unit_id" options="{'no_create_edit': True, 'no_create':True}"-->
<!--                       attrs="{'readonly': [('state', 'in', ('purchase', 'done', 'cancel'))]}" force_save="1"/>-->
                <attribute name="attrs">{'readonly': [('state', 'in', ('purchase', 'done', 'cancel'))]}</attribute>
            </xpath>

            <xpath expr="//field[@name='requisition_id']" position="after">
                <field name="custom_requisition_id" options="{'no_create_edit': True, 'no_create':True}"
                       domain="[('requisition_type', '=', 'purchase'), ('state', '=', 'approved')]"
                       string="Purchase Requisition"
                       attrs="{'readonly': [('state', 'in', ('purchase', 'done', 'cancel'))]}"/>
            </xpath>

        </field>
    </record>

