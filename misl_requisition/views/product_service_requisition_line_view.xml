<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>



                                        <!--              Product/Service Requisition View               -->

        <record id="requisition_line_form" model="ir.ui.view">
            <field name="name">requisition.line.form</field>
            <field name="model">requisition.product.service</field>
            <field name="arch" type="xml">
                <form string="Requisition Form" create="0" edit="0" delete="0">

                    <sheet>
                        <group>
                            <group>         
                                <field name="requisition_id" invisible='1' />
                                <field name="product_id"/>
                                <field name="reason" />
                                <field name="product_uom_id"/>
                                <field name="product_qty" />
                                <field name="remaining_qty" />
                                <field name="received_qty" />
                                <field name="delivery_date" />
                                <field name="requisition_type" invisible='1'/>
                            </group>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="requisition_line_tree" model="ir.ui.view">
            <field name="name">requisition.line.tree</field>
            <field name="model">requisition.product.service</field>
            <field name="arch" type="xml">
                <tree string="Requisition Line Tree" create="0" edit="0">
                    <field name="requisition_id" invisible='1'/>
                    <field name="product_id"/>
                    <field name="reason"/>
                    <field name="product_uom_id" />
                    <field name="product_qty" />
                    <field name="remaining_qty" />
                    <field name="received_qty" />
                    <field name="requisition_type" invisible='1'/>
                </tree>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_requisition_line_product">
            <field name="name">Requisition Product Lines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">requisition.product.service</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="requisition_line_tree"/>
            <field name="domain">[('product_id.detailed_type','in', ['consu','product'])]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                </p>
            </field>
        </record>

         <record model="ir.actions.act_window" id="action_requisition_line_service">
            <field name="name">Requisition Service Lines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">requisition.product.service</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="requisition_line_tree"/>
            <field name="domain">[('product_id.detailed_type','=', 'service')]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                </p>
            </field>
        </record>

    </data>
</odoo>

