<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="inherit_stock_picking_view" model="ir.ui.view">
        <field name="name">inherit.stock.picking.view</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
<!--                <field name="is_internal" invisible="1"/>-->
                <field name="custom_requisition_id"
                       domain="[('requisition_type', 'in', ('inventory', 'purchase')), ('state', '=', 'approved')]"
                       attrs="{'invisible': [('picking_type_code', 'not in', ('internal', 'incoming'))], 'readonly': [('state', '!=', 'draft')]}"/>
            </xpath>
        </field>
    </record>
</odoo>