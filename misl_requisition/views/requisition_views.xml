            <field name="name">inherit.requisition.views</field>
            <field name="model">requisition.master</field>
            <field name="inherit_id" ref="misl_requisition.requisition_master_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="%(action_requisition_purchase_list)d"
                            type="action"
                            class="oe_stat_button"
                            style="height: 60px;"
                            icon="fa-list-alt"
                            attrs="{'invisible': ['|', ('purchase_requisition_count', '=', 0), ('requisition_type', '!=', 'use')]}">
                        <div class="o_field_widget o_stat_info">
                            <field name="purchase_requisition_count" widget="statinfo" nolabel="1"/>
                            <span class="o_stat_text">Purchase</span>
                            <span class="o_stat_text">Requisitions</span>
                        </div>
                        <!--                        <field name="purchase_requisition_count" widget="statinfo" string="Purchase Requisitions"/>-->
                    </button>

                    <button name="%(action_requisition_inventory_list)d"
                            type="action"
                            class="oe_stat_button"
                            style="height: 60px;"
                            icon="fa-list-alt"
                            attrs="{'invisible': ['|', ('inventory_requisition_count', '=', 0), ('requisition_type', '!=', 'use')]}">
                        <div class="o_field_widget o_stat_info">
                            <field name="inventory_requisition_count" widget="statinfo" nolabel="1"/>
                            <span class="o_stat_text">Inventory</span>
                            <span class="o_stat_text">Requisitions</span>
                        </div>
                        <!--                        <field name="inventory_requisition_count" widget="statinfo" string="Inventory Requisitions"/>-->
                    </button>
