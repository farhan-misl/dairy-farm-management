<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="expense_config_form" model="ir.ui.view">
            <field name="name">expense.config.form</field>
            <field name="model">expense.config</field>
            <field name="arch" type="xml">
                <form string="Expense Configuration Form">


                <sheet>

                        <div class="pull-left">
                            <h1>
                                Expense Type
                            </h1>
                        </div>

                            <group>
                                
                                <field name="name"/>
                                <field name="expense_type"/>
                                
                            </group>

                        
                </sheet>

            </form>
            </field>
        </record>

        <record id="expense_config_tree" model="ir.ui.view">
            <field name="name">expense.config.tree</field>
            <field name="model">expense.config</field>
            <field name="arch" type="xml">
                <tree string="Expense Tree">
                    <field name="name" />
                    <field name="expense_type" />
                </tree>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_expense_config">
            <field name="name">Expense Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">expense.config</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create an Expense type
                </p>
            </field>
        </record>


    </data>
</odoo>